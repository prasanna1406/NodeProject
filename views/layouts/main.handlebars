<!DOCTYPE html>
<html>

<head>
  <title>{{title}}</title>
  <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="/javascripts/jquery-3.2.0.min.js"></script>
  <script src="/javascripts/bootstrap.min.js"></script>
  <script src="/main.js"></script>
  <head>

    <body>
      <ul>
        {{#if user}}
        <li><a href="/">{{user.name}}</a></li>
        <li><a href="/home">Home</a></li>
        {{!--<li><a href="/page1">Page 1</a></li>
        <li><a href="/page2">Page 2</a></li>--}}
        <li><a href="/assignment">Assignment</a></li>
        <li><a href="/quote">Quote</a></li>
        <li><a href="/news">News Portal</a></li>
        <li><a href="/showUser">View User</a></li>
        <li style="float:right"><a href="/logout">Logout</a></li>
        {{else}}
        <li style="float:right"><a href="/signup">Sign Up</a></li>
        <li style="float:right"><a href="/login">Login</a></li>
        {{/if}}
      </ul>
      <div id="container">
        <br />
        <div id="row">

         {{#if success_msg}}
           <div class="alert alert-success error">{{success_msg}}</div>
         {{/if}}

         {{#if error_msg}}
           <div class="alert alert-danger error">{{error_msg}}</div>
         {{/if}}

         {{#if errors}}
          {{# each errors}}
          <div class="alert alert-danger error">{{ this.msg }}</div>
          {{/each}}
         {{/if}}

       </div>

        <div id="body">{{{body}}}</div>
        <div id="footer">{{footer}}</div>
      </div>
</html>
